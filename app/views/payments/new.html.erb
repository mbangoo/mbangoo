<script src="https://js.stripe.com/v3/"></script>
<div class="flex items-center justify-center h-screen overflow-hidden bg-[#6F4E37]">
  <%= form_with url: "/payments", method: :post, class: "px-8 pt-6 pb-8 mb-4 bg-white rounded shadow-md", data: { controller: 'stripe', target: 'stripe.form', 'stripe-key': Rails.application.credentials.dig(:stripe, :publishable_key) }   do |f| %>

    <div class="mb-4">
      <label class="block mb-2 text-sm font-bold text-gray-700" for="email">
        Email
      </label>
      <input class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="email" type="text" placeholder="email" name="cardholder-email">
    </div>
    <div class="mb-6">
      <label class="block mb-2 text-sm font-bold text-gray-700" for="card-element">
        Credit or debit card
      </label>
      <div data-target="stripe.cardElement" class="w-100">
        <!-- A Stripe Element will be inserted here. -->
      </div>
      <!-- Used to display form errors. -->
      <div data-target="stripe.cardErrors" role="alert" class="text-center alert-danger"></div>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit "Submit Payment", class: "px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline" %>
    </div>
<% end %>
</div>
