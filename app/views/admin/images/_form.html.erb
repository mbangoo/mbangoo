<%= form_with(
      url: admin_product_images_path(@product), 
      method: :post, 
      local: true, 
      multipart: true,
      class: 'space-y-4'
    ) do |form| %>
  <div class="image-upload-section">
    <%= form.label :images, "Select Images to Upload", class: 'block text-sm font-medium text-gray-700' %>
    <%= form.file_field :images, 
        multiple: true, 
        accept: 'image/*', 
        class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
  </div>

  <div class="actions">
    <%= form.submit "Upload Images", class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>