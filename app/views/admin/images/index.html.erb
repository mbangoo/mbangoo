<div class="w-full">
  <div class="border-b border-gray-200">
    <nav class="flex -mb-px space-x-8" id="tabs-nav">
      <%= link_to "Product", edit_admin_product_path(@product), class: "tab-link border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm" %>
      <%= link_to "Variants", admin_product_variants_path(@product), class: "tab-link border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm" %>
      <%= link_to "Images", admin_product_images_path(@product), class: "tab-link border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm" %>
    </nav>
  </div>
  <div class="mt-4">
    <div id="details-tab" class="tab-content">
      <div class="container px-4 py-8 mx-auto">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
          <div class="p-6 bg-white rounded-lg shadow">
            <h2 class="mb-4 text-2xl font-bold text-gray-800">Upload Images</h2>
            <%= render 'form' %>
          </div>
          <div class="p-6 bg-white rounded-lg shadow">
            <h2 class="mb-4 text-2xl font-bold text-gray-800">Current Product Images</h2>
            <div class="grid grid-cols-3 gap-4">
              <% @product.images.each do |image| %>
                <div class="relative group">
                  <%= image_tag image.variant(resize_to_limit: [200, 200]),
                class: 'w-full h-40 object-cover rounded-lg' %>
                  <%= button_to admin_product_image_path(@product, image),
                method: :delete,
                class: 'absolute top-2 right-2 bg-red-500 text-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300',
                data: { confirm: "Are you sure you want to remove this image?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="mt-6">
          <%= link_to "Back to Product",
                      edit_admin_product_path(@product),
                      class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500' %>
        </div>
      </div>
    </div>
  </div>
