<div>
  <h2 class="mb-4 text-xl font-semibold text-gray-700">Order Items</h2>
  <div class="space-y-3">
    <% @order.order_items.each do |item| %>
      <div class="flex items-center justify-between p-4 rounded-lg bg-gray-50">
        <div class="flex items-center space-x-4">
          <div class="flex items-center justify-center w-16 h-16 bg-gray-200 rounded">
            <span class="text-sm text-gray-500">No Image</span>
          </div>
          <div>
            <p class="font-medium text-gray-800"><%= item.product_variant.product.name %></p>
            <p class="text-sm text-gray-600">
              Variant: <%= item.product_variant.sku %>
            </p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-gray-800">
            <%= number_to_currency(item.unit_price) %> Ã— <%= item.quantity %>
          </p>
          <p class="font-semibold text-gray-900">
            <%= number_to_currency(item.total_price) %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
