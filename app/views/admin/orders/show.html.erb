<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-800">Order #<%= @order.id %></h1>
      <div class="flex space-x-2">
        <%= link_to 'Back to Orders', admin_orders_path, 
            class: 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors' %>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6 p-6">
      <div>
        <h2 class="text-xl font-semibold mb-4 text-gray-700">Order Details</h2>
        <div class="space-y-3">
          <div class="flex justify-between border-b pb-2">
            <span class="text-gray-600">Order Status:</span>
            <%= order_status_badge(@order.status) %>
          </div>
          <div class="flex justify-between border-b pb-2">
            <span class="text-gray-600">Customer:</span>
            <span class="text-gray-800">
              <%= @order.user ? @order.user.email : 'Guest' %>
            </span>
          </div>
          <div class="flex justify-between border-b pb-2">
            <span class="text-gray-600">Order Date:</span>
            <span class="text-gray-800">
              <%= @order.created_at.strftime("%d %B %Y at %I:%M %p") %>
            </span>
          </div>
          <div class="flex justify-between border-b pb-2">
            <span class="text-gray-600">Total Amount:</span>
            <span class="text-gray-800 font-semibold">
              <%= number_to_currency(@order.total) %>
            </span>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-xl font-semibold mb-4 text-gray-700">Order Items</h2>
        <div class="space-y-3">
          <% @order.order_items.each do |item| %>
            <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-gray-200 rounded flex items-center justify-center">
                  <span class="text-gray-500 text-sm">No Image</span>
                </div>
                <div>
                  <p class="font-medium text-gray-800"><%= item.product_variant.product.name %></p>
                  <p class="text-sm text-gray-600">
                    Variant: <%= item.product_variant.sku %>
                  </p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-gray-800">
                  <%= number_to_currency(item.unit_price) %> Ã— <%= item.quantity %>
                </p>
                <p class="font-semibold text-gray-900">
                  <%= number_to_currency(item.total_price) %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 text-right">
      <p class="text-xl font-bold text-gray-800">
        Total: <%= number_to_currency(@order.total) %>
      </p>
    </div>
  </div>
</div>