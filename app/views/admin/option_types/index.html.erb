<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-md bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Option Type</h1>
    <%= link_to "New Options", new_admin_option_type_path, data: {turbo_frame: dom_id(OptionType.new)}, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="products" class="min-w-full">
    <%= turbo_frame_tag OptionType.new %>
    <%= turbo_frame_tag "option_types" do %>
      <%= render @option_types %>
    <% end %>
  </div>
</div>