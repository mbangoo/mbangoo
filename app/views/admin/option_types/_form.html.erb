<%= form_with(model: [:admin, option_type], class: "contents") do |form| %>
  <%= form_error_notification(option_type) %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": option_type.errors[:name].none?, "border-red-400 focus:outline-red-600": option_type.errors[:name].any?}] %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>