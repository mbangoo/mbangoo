<%= form_with(model: [:admin, option_value], class: "contents") do |form| %>
  <% if option_value.errors.any? %>
    <div id="error_explanation" class="px-3 py-2 mt-3 font-medium text-red-500 rounded-md bg-red-50">
      <h2><%= pluralize(option_value.errors.count, "error") %> prohibited this option from being saved:</h2>
      <ul class="ml-6 list-disc">
        <% option_value.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :option_type_id, value: option_type.id %>
  <div class="my-5">
    <%= form.label :value %>
    <%= form.text_field :value, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": option_value.errors[:value].none?, "border-red-400 focus:outline-red-600": option_value.errors[:value].any?}] %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>